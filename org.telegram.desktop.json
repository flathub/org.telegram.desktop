{
    "id": "org.telegram.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "telegram-desktop",
    "rename-icon": "telegram",
    "finish-args": [ "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--socket=pulseaudio",
                     "--talk-name=org.kde.StatusNotifierWatcher",
                     "--talk-name=org.freedesktop.Notifications",
                     "--talk-name=com.canonical.Unity",
                     "--talk-name=org.freedesktop.portal.Fcitx",
                     "--filesystem=xdg-download",
                     "--device=dri",
                     "--env=QT_QPA_PLATFORM=xcb"],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "version": "19.08",
            "autodownload": true,
            "autodelete": false
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup": [ "/cache",
                 "/man",
                 "/share/man",
                 "/lib/systemd",
                 "/include",
                 "/lib/pkgconfig",
                 "/lib/cmake",
                 "*.la", "*.a"],
    "modules": [
        {
            "name": "cmake",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Kitware/CMake/releases/download/v3.16.2/cmake-3.16.2.tar.gz",
                    "sha256": "8c09786ec60ca2be354c29829072c38113de9184f29928eb9da8446a5f2ce6a9"
                }
            ],
            "cleanup": [ "*" ]
        },
        {
            "name": "range-3",
            "buildsystem": "cmake",
            "build-options": {
                "cflags": "-Wno-error"
            },
            "config-opts": [
                "-DRANGE_V3_TESTS:BOOL=OFF",
                "-DRANGE_V3_EXAMPLES:BOOL=OFF",
                "-DRANGE_V3_PERF:BOOL=OFF",
                "-DRANGE_V3_DOCS:BOOL=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/ericniebler/range-v3/archive/0.10.0.tar.gz",
                    "sha256": "5a1cd44e7315d0e8dcb1eee4df6802221456a9d1dbeac53da02ac7bd4ea150cd"
                }
            ]
        },
        {
            "name": "enchant",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/AbiWord/enchant/releases/download/v2.2.7/enchant-2.2.7.tar.gz",
                    "sha256": "1b22976135812b35cb5b8d21a53ad11d5e7c1426c93f51e7a314a2a42cab3a09"
                }
            ]
        },
        {
            "name": "lz4",
            "no-autogen": true,
            "make-args": [
                "PREFIX=$(FLATPAK_DEST)"
            ],
            "make-install-args": [
                "PREFIX=$(FLATPAK_DEST)"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/lz4/lz4/archive/v1.9.2.tar.gz",
                    "sha256": "658ba6191fa44c92280d4aa2c271b0f4fbc0e34d249578dd05e50e76d0e5efcc"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "xxHash",
            "no-autogen": true,
            "make-args": [
                "prefix=$(FLATPAK_DEST)"
            ],
            "make-install-args": [
                "prefix=$(FLATPAK_DEST)"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Cyan4973/xxHash/archive/v0.7.2.tar.gz",
                    "sha256": "7e93d28e81c3e95ff07674a400001d0cdf23b7842d49b211e5582d00d8e3ac3e"
                }
            ],
            "cleanup": [
                "/bin"
            ]
        },
        {
            "name": "minizip",
            "subdir": "contrib/minizip",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://zlib.net/zlib-1.2.11.tar.gz",
                    "md5": "1c9f62f0778697a09d36121ead88e08e"
                },
                {
                    "type": "script",
                    "dest-filename": "contrib/minizip/autogen.sh",
                    "commands": [
                        "autoreconf -ifv"
                    ]
                }
            ]
        },
        {
            "name": "guidelines-support-library",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DGSL_TEST:BOOL=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/microsoft/GSL/archive/v2.1.0.tar.gz",
                    "sha256": "ef73814657b073e1be86c8f7353718771bf4149b482b6cb54f99e79b23ff899d"
                }
            ]
        },
        {
            "name": "telegram-desktop",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "build-options": {
                "ldflags": "-Wl,--no-keep-memory -Wl,--reduce-memory-overheads"
            },
            "config-opts": [
                "-DDESKTOP_APP_USE_PACKAGED:BOOL=ON",
                "-DDESKTOP_APP_USE_PACKAGED_FONTS:BOOL=OFF",
                "-DDESKTOP_APP_USE_PACKAGED_RLOTTIE:BOOL=OFF",
                "-DDESKTOP_APP_USE_PACKAGED_EXPECTED:BOOL=OFF",
                "-DDESKTOP_APP_USE_PACKAGED_VARIANT:BOOL=OFF",
                "-DTDESKTOP_USE_PACKAGED_TGVOIP:BOOL=OFF",
                "-DTDESKTOP_LAUNCHER_BASENAME=org.telegram.desktop",
                "-DTDESKTOP_API_ID=611335",
                "-DTDESKTOP_API_HASH=d524b414d21f4d37f08684c1df41ac9c"
            ],
            "post-install": [
                "../changelog2appdata.py -c ../changelog.txt -a /app/share/metainfo/${FLATPAK_ID}.appdata.xml -n 10"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/telegramdesktop/tdesktop.git",
                    "tag": "v1.9.10",
                    "commit": "cc71bdce8f5a26bc1228425bb84e595772d457b2"
                },
                {
                    "type": "file",
                    "path": "changelog2appdata.py"
                }
            ]
        }
    ]
}
