{
    "id": "org.telegram.desktop",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "telegram-desktop",
    "rename-icon": "telegram",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=all",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.ScreenSaver",
        "--talk-name=org.freedesktop.portal.Fcitx",
        "--talk-name=org.gnome.Mutter.IdleMonitor",
        "--talk-name=org.gnome.SettingsDaemon.MediaKeys",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=com.canonical.Unity",
        "--talk-name=com.canonical.indicator.application",
        "--talk-name=org.ayatana.indicator.application",
        "--system-talk-name=org.freedesktop.NetworkManager",
        "--filesystem=xdg-download"
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "add-ld-path": ".",
            "version": "20.08",
            "autodownload": true,
            "autodelete": false
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ],
    "cleanup": [
        "/cache",
        "/man",
        "/share/man",
        "/lib/systemd",
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "yasm",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.tortall.net/projects/yasm/releases/yasm-1.3.0.tar.gz",
                    "sha256": "3dce6601b495f5b3d45b59f7d2492a340ee7e84b5beca17e48f862502bd5603f"
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "mozjpeg",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_DEFAULT_LIBDIR=lib",
                "-DENABLE_STATIC:BOOL=OFF"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/mozilla/mozjpeg/archive/v4.0.1-rc2.tar.gz",
                    "sha256": "3dbcfd1345315169996d9ba1b71145db04d1fae2b005a9cd828a984957504df0"
                }
            ]
        },
        {
            "name": "tg_owt",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DBUILD_SHARED_LIBS=OFF"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/desktop-app/tg_owt.git",
                    "commit": "be23804afce3bb2e80a1d57a7c1318c71b82b7de"
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "telegram-desktop",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "build-options": {
                "ldflags": "-Wl,--no-keep-memory -Wl,--reduce-memory-overheads"
            },
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DDESKTOP_APP_USE_PACKAGED:BOOL=ON",
                "-DDESKTOP_APP_USE_PACKAGED_LAZY:BOOL=ON",
                "-DDESKTOP_APP_USE_PACKAGED_LAZY_PLATFORMTHEMES:BOOL=OFF",
                "-DDESKTOP_APP_USE_PACKAGED_FONTS:BOOL=OFF",
                "-DTDESKTOP_LAUNCHER_BASENAME=org.telegram.desktop",
                "-DTDESKTOP_API_ID=611335",
                "-DTDESKTOP_API_HASH=d524b414d21f4d37f08684c1df41ac9c"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/telegramdesktop/tdesktop.git",
                    "tag": "v2.5.6",
                    "commit": "8ed56bb4e4d9783154d05b8110082ee9272ddc18",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/telegramdesktop/tdesktop/releases",
                        "tag-query": "first | .tag_name",
                        "version-query": "$tag | sub(\"^[vV]\"; \"\")"
                    }
                }
            ]
        }
    ]
}